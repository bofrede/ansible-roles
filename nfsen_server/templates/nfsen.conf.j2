$BASEDIR = "/usr/local";
$BINDIR="${BASEDIR}/bin";
$LIBEXECDIR="${BASEDIR}/libexec/nfsen";
$CONFDIR="${BASEDIR}/etc";
$HTMLDIR    = "/usr/local/www/nfsen";
$DOCDIR="${HTMLDIR}/doc";
$VARDIR="{{ nfsen_vardir }}";
$PROFILESTATDIR="${VARDIR}/profiles-stat";
$PROFILEDATADIR="${VARDIR}/profiles-data";
$BACKEND_PLUGINDIR="${LIBEXECDIR}/plugins";
$FRONTEND_PLUGINDIR="${HTMLDIR}/plugins";
$PREFIX  = '/usr/local/bin'; # does not work when set to ${BINDIR} for some reason
$USER    = "www";
$WWWUSER  = "www";
$WWWGROUP = "www";
$BUFFLEN = 200000;
$SUBDIRLAYOUT = 1;
$ZIPcollected    = 1;
$ZIPprofiles     = 1;
$PROFILERS = 2;
$DISKLIMIT = 98;
$PROFILERS = 6;
%sources = (
    {% for name, value in nfsen_sources.items() %}
    '{{ name }}'        => { 'port' => '{{ value.port }}', 'col'=> '{{ value.colour }}', 'type'=> '{{ value.type }}' , 'optarg' => '{{ value.optarg }}'},
    {% endfor %}
);
$low_water = 90;
$syslog_facility = 'local6';
$MAIL_FROM   = '{{ nfsen_mail_from }}';
$SMTP_SERVER = '{{ nfsen_smtp_server }}';
$MAIL_BODY       = q{ 
Alert '@alert@' triggered at timeslot @timeslot@
};
1;

