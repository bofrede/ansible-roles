{% for zone in bind_dynamic_zonelist %}
zone "{{ zone.zone }}." {
    type master;
    notify no;
    file "../dynamic/{{ zone.zone }}.zone";
    allow-update { key "rndc-key"; };
};
{% endfor %}
{% endif %}

