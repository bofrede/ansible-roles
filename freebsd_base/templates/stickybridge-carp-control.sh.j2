#!/bin/sh
/usr/bin/logger "CARP $1 just became $2 on $(hostname) !"

if [ "$2" = "MASTER" ]; then
    # add VIP to bridge interface
    /usr/bin/logger "Adding {{ stickybridge_vip }} to {{ stickybridge_bridge }} because CARP $1 just became $2 ..."
    /sbin/ifconfig {{ stickybridge_bridge }} alias {{ stickybridge_vip }}
else
    /usr/bin/logger "Removing {{ stickybridge_vip }} from {{ stickybridge_bridge }} because CARP $1 just became $2 ..."
    /sbin/ifconfig {{ stickybridge_bridge }} {{ stickybridge_vip }} remove
fi

