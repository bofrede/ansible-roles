# {{ item.name }}

# create the VLAN interface
vlans_{{ vlan_interface }}="${vlans_{{ vlan_interface }}} {{ item.vlan }}"

# configure ipv4 on the VLAN interface
ifconfig_{{ vlan_interface }}_{{ item.vlan }}="{{ item['ips'][inventory_hostname_short]['v4ip'] }}/{{ item.v4net.split("/")[1] }}"

# configure ipv6 on the VLAN interface
ifconfig_{{ vlan_interface }}_{{ item.vlan }}="{{ item['ips'][inventory_hostname_short]['v6ip'] }}/{{ item.v6net.split("/")[1] }}"

