{% if pkg_tykports_enable|default(True) %}
// built from tree https://github.com/tykling/freebsd-ports/tree/tykports
{{ poudriere_repo_name }}: {
    url: "https://{{ poudriere_repo_hostname }}/packages/freebsd_{{ ansible_facts['distribution_version']|replace('.', '_') }}_{{ ansible_facts['architechture'] }}-tykports",
    mirror_type: "http",
    signature_type: "pubkey",
    pubkey: "/usr/local/etc/ssl/certs/poudriere.cert",
    enabled: yes,
    priority: 200
}
{% endif %}
// built from default portsnap tree
{{ poudriere_repo_name }}: {
    url: "https://{{ poudriere_repo_hostname }}/packages/{{ poudriere_package_set }}",
    mirror_type: "http",
    signature_type: "pubkey",
    pubkey: "/usr/local/etc/ssl/certs/poudriere.cert",
    enabled: yes,
    priority: 100
}

