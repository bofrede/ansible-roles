[uwsgi]
chdir={{ uwsgi_root }}
module={{ uwsgi_module }}
pidfile={{ uwsgi_pidfile }}
socket={{ uwsgi_socketpath }}
http=127.0.0.1:8080
stats={{ uwsgi_statsurl }}
stats-http=True
memory-report=True
touch-chain-reload={{ uwsgi_touchchainreloadpath }}
master=True
vacuum=True
max-requests=5000
processes={{ uwsgi_processes }}
threads=1
logger=syslog
lazy-apps=True
uid=80
gid=80
log-x-forwarded-for=True
http-timeout={{ uwsgi_http_timeout }}
{% if uwsgi_environment is defined %}
{% for key, value in uwsgi_environment.items() %}env={{ key }}={{ value }}
{% endfor %}
{% endif %}

